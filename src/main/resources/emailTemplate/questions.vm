<html>
<body>
    #set ($id = $examId)
<form method="POST" action="http://localhost:8080/api/v1/exams/${id}/submit">
    #set ($questionIndex = 1)

    #foreach ($question in $questions)
        <tr>
            <p>$questionIndex. $question.question</p>
            <label>
                <textarea name="answer_$questionIndex" rows="5" cols="50"></textarea>
            </label>
            <br><br>
        </tr>
        #set ($questionIndex = $questionIndex + 1)
    #end
    <tr>
        <td colspan="2"><input type="submit" value="Prześlij rozwiązanie"></td>
    </tr>
</form>

</body>
</html>